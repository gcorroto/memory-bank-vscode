{
  "name": "memory-bank-vscode",
  "version": "3.0.0",
  "icon": "resources/icons/logo_transparent.png",
  "private": true,
  "displayName": "Memory Bank Inspector",
  "description": "Memory Bank Inspector - Explore and visualize indexed projects, code relationships, and documentation from your Memory Bank.",
  "license": "MIT",
  "publisher": "grec0",
  "repository": {
    "type": "git",
    "url": "https://github.com/gcorroto/autofixer_extension.git"
  },
  "engines": {
    "vscode": "^1.26.0"
  },
  "categories": [
    "Testing",
    "Linters",
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "memorybank-sidebar",
          "title": "Memory Bank",
          "icon": "resources/icons/logo_square_transparent.png"
        }
      ]
    },
    "views": {
      "memorybank-sidebar": [
        {
          "id": "memorybank-projects",
          "name": "Proyectos"
        },
        {
          "id": "memorybank-files",
          "name": "Archivos Indexados"
        },
        {
          "id": "memorybank-docs",
          "name": "Documentación"
        },
        {
          "id": "memorybank-relations",
          "name": "Code Relations"
        }
      ]
    },
    "commands": [
      {
        "command": "git.connectionSettings.initializeGitRepository",
        "title": "Initialize Git Repository",
        "category": "Memory Bank"
      },
      {
        "command": "memorybank.filesystem.refresh",
        "title": "Refresh File Tree",
        "category": "Memory Bank",
        "icon": {
          "dark": "resources/icons/dark/refresh.svg",
          "light": "resources/icons/light/refresh.svg"
        }
      },
      {
        "command": "memorybank.automaticTest",
        "title": "Automatic Test",
        "category": "Memory Bank",
        "icon": {
          "dark": "resources/icons/dark/frame_sink.png",
          "light": "resources/icons/light/frame_sink.png"
        }
      },
      {
        "command": "memorybank.refresh",
        "title": "Refrescar Memory Bank",
        "category": "Memory Bank",
        "icon": {
          "dark": "resources/icons/dark/refresh.svg",
          "light": "resources/icons/light/refresh.svg"
        }
      },
      {
        "command": "memorybank.configure",
        "title": "Configurar ruta de Memory Bank",
        "category": "Memory Bank"
      },
      {
        "command": "memorybank.selectProject",
        "title": "Seleccionar Proyecto",
        "category": "Memory Bank"
      },
      {
        "command": "memorybank.deleteProject",
        "title": "Eliminar Proyecto",
        "category": "Memory Bank",
        "icon": "$(trash)"
      },
      {
        "command": "memorybank.openDoc",
        "title": "Abrir Documento",
        "category": "Memory Bank"
      },
      {
        "command": "memorybank.openIndexedFile",
        "title": "Abrir Archivo Indexado",
        "category": "Memory Bank"
      },
      {
        "command": "memorybank.relations.analyze",
        "title": "Analizar Relaciones del Proyecto",
        "category": "Memory Bank",
        "icon": "$(play)"
      },
      {
        "command": "memorybank.relations.showFlow",
        "title": "Ver Dataflow de Relaciones",
        "category": "Memory Bank",
        "icon": "$(type-hierarchy)"
      },
      {
        "command": "memorybank.relations.refresh",
        "title": "Actualizar Vista de Relaciones",
        "category": "Memory Bank",
        "icon": "$(refresh)"
      },
      {
        "command": "memorybank.relations.openFile",
        "title": "Abrir Archivo",
        "category": "Memory Bank"
      },
      {
        "command": "memorybank.explain",
        "title": "Explain Code",
        "category": "Memory Bank"
      },
      {
        "command": "memorybank.fix",
        "title": "Fix Code",
        "category": "Memory Bank"
      },
      {
        "command": "memorybank.openai.configure",
        "title": "Configure OpenAI API Key",
        "category": "Memory Bank"
      },
      {
        "command": "memorybank.indexProject",
        "title": "Index Project for RAG",
        "category": "Memory Bank"
      },
      {
        "command": "memorybank.ask",
        "title": "Preguntar al Asistente",
        "category": "Memory Bank"
      },
      {
        "command": "memorybank.agent.generateTest",
        "title": "Generate Test (Agent)",
        "category": "Memory Bank Agent"
      },
      {
        "command": "memorybank.agent.analyzeCode",
        "title": "Analyze Code (Agent)",
        "category": "Memory Bank Agent"
      },
      {
        "command": "memorybank.agent.fixError",
        "title": "Fix Error (Agent)",
        "category": "Memory Bank Agent"
      },
      {
        "command": "memorybank.agent.explain",
        "title": "Explain Code (Agent)",
        "category": "Memory Bank Agent"
      },
      {
        "command": "memorybank.agent.showLogs",
        "title": "Show Agent Logs",
        "category": "Memory Bank Agent"
      },
      {
        "command": "memorybank.agent.testReasoningModel",
        "title": "Test Reasoning Model",
        "category": "Memory Bank Agent"
      },
      {
        "command": "memorybank.runAutofixer",
        "title": "Ejecutar Autofixer",
        "category": "Memory Bank Agent"
      },
      {
        "command": "memorybank.showEventsViewer",
        "title": "Memory Bank: Mostrar Visor de Eventos y Cambios"
      },
      {
        "command": "memorybank.clearEvents",
        "title": "Memory Bank: Limpiar Eventos"
      },
      {
        "command": "memorybank.toggleTerminal",
        "title": "Memory Bank: Mostrar/Ocultar Terminal CLI"
      },
      {
        "command": "memorybank.showFlowViewer",
        "title": "Mostrar Visualizador de Flujos",
        "category": "Memory Bank Agent"
      },
      {
        "command": "memorybank.showConfigViewer",
        "title": "Mostrar Configurador Visual",
        "category": "Memory Bank Agent"
      },
      {
        "command": "memorybank.showDashboard",
        "title": "Mostrar Dashboard de Agente",
        "category": "Memory Bank Agent"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "memorybank.refresh",
          "when": "view == memorybank-projects",
          "group": "navigation"
        },
        {
          "command": "memorybank.configure",
          "when": "view == memorybank-projects",
          "group": "navigation"
        },
        {
          "command": "memorybank.refresh",
          "when": "view == memorybank-files",
          "group": "navigation"
        },
        {
          "command": "memorybank.refresh",
          "when": "view == memorybank-docs",
          "group": "navigation"
        },
        {
          "command": "memorybank.relations.analyze",
          "when": "view == memorybank-relations",
          "group": "navigation"
        },
        {
          "command": "memorybank.relations.showFlow",
          "when": "view == memorybank-relations",
          "group": "navigation"
        },
        {
          "command": "memorybank.relations.refresh",
          "when": "view == memorybank-relations",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "memorybank.automaticTest",
          "group": "memorybank"
        },
        {
          "command": "memorybank.explain",
          "group": "memorybank"
        },
        {
          "command": "memorybank.fix",
          "group": "memorybank"
        },
        {
          "command": "memorybank.ask",
          "group": "memorybank"
        },
        {
          "command": "memorybank.agent.generateTest",
          "group": "memorybank-agent"
        },
        {
          "command": "memorybank.agent.analyzeCode",
          "group": "memorybank-agent"
        },
        {
          "command": "memorybank.agent.fixError",
          "group": "memorybank-agent"
        },
        {
          "command": "memorybank.agent.explain",
          "group": "memorybank-agent"
        },
        {
          "command": "memorybank.agent.testReasoningModel",
          "group": "memorybank-agent"
        },
        {
          "command": "memorybank.runAutofixer",
          "group": "memorybank-agent"
        }
      ],
      "view/item/context": [
        {
          "command": "memorybank.openDoc",
          "when": "view == memorybank-docs && viewItem == memorybank-doc",
          "group": "navigation"
        },
        {
          "command": "memorybank.openIndexedFile",
          "when": "view == memorybank-files && viewItem == memorybank-indexed-file",
          "group": "navigation"
        },
        {
          "command": "memorybank.deleteProject",
          "when": "view == memorybank-projects && viewItem == memorybank-project",
          "group": "danger@1"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Memory Bank",
      "properties": {
        "memorybank.filesystem.projectFolder": {
          "type": "string",
          "default": "",
          "description": "Project folder relative to workspace root",
          "scope": "application"
        },
        "memorybank.filesystem.excludePatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "node_modules",
            "dist",
            ".git",
            "coverage"
          ],
          "description": "Patterns to exclude from file tree (in addition to .gitignore)",
          "scope": "application"
        },
        "memorybank.path": {
          "type": "string",
          "default": "C:\\Users\\goyoc\\.memorybank",
          "description": "Ruta a la carpeta del Memory Bank (relativa al workspace o absoluta)",
          "scope": "resource"
        },
        "memorybank.defaultProject": {
          "type": "string",
          "default": "",
          "description": "ID del proyecto por defecto para RAG (si vacío, usa el primer proyecto disponible)",
          "scope": "resource"
        },
        "memorybank.test.framework": {
          "type": "string",
          "enum": [
            "jasmine",
            "jest",
            "mocha"
          ],
          "default": "jasmine",
          "description": "Test framework to use for generated tests",
          "scope": "application"
        },
        "memorybank.openai.apiKey": {
          "type": "string",
          "default": "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",
          "description": "OpenAI API Key para acceder a los servicios de IA",
          "scope": "application"
        },
        "memorybank.openai.model": {
          "type": "string",
          "enum": [
            "gpt-5-mini",
            "gpt-5.2",
            "gpt-5.1-codex",
            "o4-mini"
          ],
          "default": "gpt-5-mini",
          "description": "Modelo de OpenAI a utilizar para las consultas",
          "scope": "application"
        },
        "memorybank.openai.models.planning": {
          "type": "string",
          "enum": [
            "gpt-5.2",
            "gpt-5-mini",
            "o4-mini"
          ],
          "default": "gpt-5.2",
          "description": "Modelo de OpenAI a utilizar para tareas de planificación",
          "scope": "application"
        },
        "memorybank.openai.models.analysis": {
          "type": "string",
          "enum": [
            "gpt-5.2",
            "gpt-5-mini",
            "o4-mini"
          ],
          "default": "gpt-5.2",
          "description": "Modelo de OpenAI a utilizar para tareas de análisis",
          "scope": "application"
        },
        "memorybank.openai.models.codegen": {
          "type": "string",
          "enum": [
            "gpt-5.1-codex",
            "gpt-5.2",
            "gpt-5-mini"
          ],
          "default": "gpt-5.1-codex",
          "description": "Modelo de OpenAI a utilizar para tareas de generación de código",
          "scope": "application"
        },
        "memorybank.rag.similarityThreshold": {
          "type": "number",
          "default": 0.7,
          "description": "Umbral de similitud para consultas RAG (entre 0 y 1)",
          "scope": "application"
        },
        "memorybank.rag.contextCount": {
          "type": "number",
          "default": 3,
          "description": "Número de fragmentos de contexto a recuperar para RAG",
          "scope": "application"
        },
        "memorybank.autofixer.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable automatic execution of instructions from autofixer.md file on startup",
          "scope": "application"
        },
        "memorybank.agent.maxReplanning": {
          "type": "number",
          "default": 5,
          "minimum": 0,
          "maximum": 10,
          "description": "Maximum number of times the agent can replan a task if it fails (0 disables replanning)",
          "scope": "application"
        },
        "memorybank.agent.intelligentValidation": {
          "type": "boolean",
          "default": true,
          "description": "Use LLM for intelligent plan validation instead of rule-based validation",
          "scope": "application"
        },
        "memorybank.agent.autoReplanning": {
          "type": "boolean",
          "default": true,
          "description": "Automatically replan tasks when they fail or produce suboptimal results",
          "scope": "application"
        },
        "git.connectionSettings.gitRepoUrl": {
          "type": "string",
          "default": "https://github.com/",
          "description": "Remote Git repository URL"
        },
        "git.connectionSettings.gitUsername": {
          "type": "string",
          "default": "",
          "description": "Git username for repository access"
        },
        "git.connectionSettings.gitToken": {
          "type": "string",
          "default": "",
          "description": "Git personal access token (PAT) for repository access"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p ./",
    "watch-tests": "tsc -p ./ --watch",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "@lancedb/lancedb": "^0.15.0",
    "@types/async-lock": "^1.1.1",
    "@types/bluebird": "*",
    "@types/glob": "^8.1.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/request": "*",
    "acorn": "^8.14.0",
    "async-lock": "^1.1.4",
    "bluebird": "^3.5.0",
    "dagre": "0.8.5",
    "glob": "^10.4.5",
    "gray-matter": "^4.0.3",
    "memory-bank-vscode": "file:",
    "immutable": "^4.0.0-rc.12",
    "java-parser": "^2.3.2",
    "openai": "^4.103.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "reactflow": "^11.10.0",
    "request": "^2.81.0",
    "ts-log-debug": "^4.0.4",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/dagre": "0.7.53",
    "@types/jest": "^29.5.14",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.0",
    "@types/vscode": "^1.26.0",
    "@types/webpack-env": "^1.18.0",
    "copy-webpack-plugin": "^13.0.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.40.0",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "webpack": "^5.82.0",
    "webpack-cli": "^5.1.1"
  }
}
